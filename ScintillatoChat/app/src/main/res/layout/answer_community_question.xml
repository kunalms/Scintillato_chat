<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/answer_community_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatback"
    tools:context="com.scintillato.scintillatochat.Answer_Community_Question">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/cardview1_answer_community_question">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout2"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_answer_community_question_dp"
            android:src="@drawable/userprofile100"
            android:layout_alignParentTop="true" />
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answer_community_question_name"
            android:layout_alignTop="@id/iv_answer_community_question_dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/iv_answer_community_question_dp"
            android:layout_toRightOf="@+id/iv_answer_community_question_dp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview2_answer_community_question"
        android:layout_below="@+id/cardview1_answer_community_question"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@id/cardview1_answer_community_question"
        android:layout_alignLeft="@id/cardview1_answer_community_question">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="question"
        android:padding="8dp"
        android:id="@+id/tv_answer_community_question_question"
        android:maxLines="4"
        android:scrollbars="vertical"
         />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview3_answer_community_question"
        android:layout_below="@id/cardview2_answer_community_question"
        android:layout_alignLeft="@id/cardview2_answer_community_question"
        android:layout_alignRight="@id/cardview2_answer_community_question"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:id="@+id/iv_answer_community_question_image"/>

            <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Answer.."
        android:background="@color/white"
        android:padding="10dp"
        android:ems="10"
        android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
        android:id="@+id/et_answer_community_question_answer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:maxLines="7"
        android:scrollbars="vertical"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:text="POST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_answer_community_question_post"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/button_background"/>

</RelativeLayout>
