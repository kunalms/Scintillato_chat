<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gradient="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scintillato.scintillatochat.Login_Page"

    >

    <com.dynamitechetan.flowinggradient.FlowingGradient
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        gradient:transition_duration = "4000"
        gradient:transition_drawable="@drawable/translate"
        />

    <Button
        android:text="Dont have an account ? sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_login_page_signup"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_semi_transparent"/>


    <Button
        android:text="SIGN IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_page_signin"
        android:textColor="@color/black"
        android:background="@drawable/button_semi_transparent"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/btn_login_page_signup"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="+91"
        android:ems="10"
        android:id="@+id/editText"
        android:textColor="@color/white"
        android:layout_marginBottom="97dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="35dp"
        android:layout_above="@+id/btn_login_page_signin"
        android:layout_alignLeft="@+id/btn_login_page_signup"
        android:layout_alignStart="@+id/btn_login_page_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/et_login_page_pwd"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_below="@+id/et_login_page_number"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Phone Number"
        android:textColor="@color/white"
        android:id="@+id/et_login_page_number"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <CheckBox
        android:text="show password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:id="@+id/cb_login_page"
        android:layout_below="@+id/et_login_page_pwd"
        android:layout_alignLeft="@+id/et_login_page_pwd"
        android:layout_alignStart="@+id/et_login_page_pwd" />

</RelativeLayout>
