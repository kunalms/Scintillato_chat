<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_feed_community"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scintillato.scintillatochat.Comment_Feed_Community">

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lv_comment_feed_community_comment"
        android:layout_height="match_parent"
        android:layout_above="@+id/progressBar_comment_feed_community"></ListView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar_comment_feed_community"/>
</RelativeLayout>
