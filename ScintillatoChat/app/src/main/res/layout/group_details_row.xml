<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_group_details_row_dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:src="@drawable/groupprofile100" />

    <TextView
        android:id="@+id/tv_group_details_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/iv_group_details_row_dp"
        android:layout_marginLeft="14dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iv_group_details_row_dp"
        android:text="NAME" />

    <TextView
        android:id="@+id/tv_group_details_row_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_group_details_row_name"
        android:layout_below="@+id/tv_group_details_row_name"
        android:text="NUMBER"
        android:textColor="#000000" />

</RelativeLayout>
</android.support.v7.widget.CardView>