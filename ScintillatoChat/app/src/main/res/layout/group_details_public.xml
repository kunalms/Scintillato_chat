<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verifyback"
    tools:context="com.scintillato.scintillatochat.Group_Details_Public" >

    <EditText
        android:id="@+id/et_group_details_public_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_group_details_public_image"
        android:layout_marginLeft="14dp"
        android:hint="Type group name..."
        android:layout_toRightOf="@+id/iv_group_details_public_image"
        android:ems="10" >

    </EditText>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_group_details_public_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/groupprofile100" />

    <EditText
        android:id="@+id/et_group_details_public_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type group topic..."
        android:layout_below="@+id/et_group_details_public_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/et_group_details_public_description"
        android:layout_width="wrap_content"
        android:hint="Type group description..."
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_group_details_public_topic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="10" >

    </EditText>



    <ListView
        android:id="@+id/lv_group_details_public_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner_group_details_public_categories">

    </ListView>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_group_details_public_categories"
        android:layout_marginTop="5dp"
        android:entries="@array/Categories"
        android:layout_below="@+id/et_group_details_public_description"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
