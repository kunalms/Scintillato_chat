<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_notification_request_row_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/groupprofile100" />

    <TextView
        android:id="@+id/tv_notification_request_row_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_notification_request_row_image"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/iv_notification_request_row_image"
        android:layout_toRightOf="@+id/iv_notification_request_row_image"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_notification_request_row_group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_notification_request_row_group_name"
        android:layout_alignRight="@+id/tv_notification_request_row_group_name"
        android:layout_below="@+id/tv_notification_request_row_group_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_notification_request_row_user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tv_notification_request_row_group_id"
        android:layout_alignLeft="@+id/tv_notification_request_row_group_id"
        android:layout_alignStart="@+id/tv_notification_request_row_group_id" />

    <Button
        android:id="@+id/btn_notification_request_row_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_notification_request_row_image"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/tv_notification_request_row_user_number"
        android:layout_toStartOf="@+id/tv_notification_request_row_user_number"
        android:text="ACCEPT" />

    <Button
        android:id="@+id/btn_notification_request_row_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_notification_request_row_accept"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tv_notification_request_row_user_number"
        android:layout_toRightOf="@+id/tv_notification_request_row_user_number"
        android:text="REJECT" />
</RelativeLayout>
