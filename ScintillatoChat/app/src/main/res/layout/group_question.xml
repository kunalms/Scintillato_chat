<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"

    tools:context="com.scintillato.scintillatochat.Group_Question">

    <!-- TODO: Update blank fragment layout -->

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_group_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:scaleType="center"
        fab:fabSize="normal"
        android:layout_margin="@dimen/fab_margin"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_group_question_questions"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/progress_bar_group_questions"
        android:layout_below="@+id/lv_group_question_questions"/>

</FrameLayout>
