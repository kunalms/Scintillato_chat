<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/whitebubble"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/message_chat_box">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_header"
            android:text="Large Text"
            android:textColor="#000000"
            android:id="@+id/tv_message_chat_row_name"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp">

            <TextView
                android:id="@+id/tv_message_chat_row_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1.29"
                android:text="Text goes here"
                android:paddingLeft="5dp"
                android:textColor="#040404"
                android:textSize="@dimen/font_size_message"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_message_chat_row_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:text="Date"
                android:textColor="@color/half_black"
                android:textSize="@dimen/font_size_datetime" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_all_black18"
                android:id="@+id/img_message_chat_status"
                android:layout_gravity="bottom"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
