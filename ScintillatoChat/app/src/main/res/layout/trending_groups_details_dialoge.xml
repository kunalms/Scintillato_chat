<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:id="@+id/tv_trending_groups_details_dialoge_name" />

    <TextView
        android:text="Topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trending_groups_details_dialoge_name"
        android:layout_alignStart="@+id/tv_trending_groups_details_dialoge_name"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_trending_groups_details_dialoge_topic" />

    <TextView
        android:text="Descripion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/tv_trending_groups_details_dialoge_description"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tv_trending_groups_details_dialoge_topic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_trending_groups_details_dialoge_followers"
        android:layout_below="@+id/tv_trending_groups_details_dialoge_description"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trending_groups_details_dialoge_followers"
        android:layout_alignParentStart="true">
    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trending_groups_details_dialoge_followers"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/btn_trending_groups_details_dialoge_ok" />

        <Button
            android:text="JOIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/btn_trending_groups_details_dialoge_join" />
    </LinearLayout>
</RelativeLayout>
