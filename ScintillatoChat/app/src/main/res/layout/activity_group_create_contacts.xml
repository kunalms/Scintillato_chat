<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:layout_marginRight="@dimen/parent_margin_right"
    android:layout_marginLeft="@dimen/parent_margin_left">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/progress_bar_group_create_contacts_1"
        android:layout_marginTop="5dp"
        android:background="@drawable/circular_progress_bar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <RelativeLayout android:id="@+id/rl_activity_group_contacts_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_activity_group_create_contacts_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="SKIP >"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_background"/>
        
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_group_create_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_activity_group_contacts_1"
        android:dividerHeight="0dp"
        android:divider="@null">

    </ListView>

</RelativeLayout>
