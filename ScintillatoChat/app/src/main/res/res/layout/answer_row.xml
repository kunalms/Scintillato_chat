<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_answer_row">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="User"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/tv_answer_row_user"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_answer_profile"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:text="Time"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_answer_row_time"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_answer_profile"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/iv_answer_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/userprofile100" />

        </RelativeLayout>



        <TextView
            android:text="Answer"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answer_row_answer" />


        <TextView
            android:textColor="@color/black"
            android:text="Likes 0 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_answer_row_like"
            android:layout_below="@+id/tv_answer_row_answer" />
        <TextView
            android:textColor="@color/black"
            android:text="Comments 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_answer_row_like"
            android:id="@+id/tv_answer_row_comments"
            android:layout_below="@+id/tv_answer_row_answer" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <ImageButton
                android:text="Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_answer_row_like"
                android:layout_weight="1"
                android:src="@drawable/like30"
                android:background="#FFFFFF"/>

            <ImageButton
                android:text="Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_answer_row_comment"
                android:layout_weight="1"
                android:src="@drawable/comments30"
                android:background="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>