<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_home_page_row_dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_launcher" />





    <TextView
        android:id="@+id/tv_home_page_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignTop="@+id/iv_home_page_row_dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iv_home_page_row_dp"
        android:text="NAME" />

    <TextView
        android:id="@+id/tv_home_page_row_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_home_page_row_name"
        android:layout_below="@+id/tv_home_page_row_name"
        android:text="Message"
        android:textColor="#000000"
        android:layout_marginRight="45dp"
        android:maxLines="1" />

    <TextView
        android:text="12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:background="@drawable/message_notification_background"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/tv_group_details_row_name"
        android:textSize="13dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"/>

</RelativeLayout>
