<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_chose_contacts_single_row_dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/userprofile100" />

        <TextView
            android:id="@+id/tv_chose_contacts_single_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_chose_contacts_single_row_dp"
            android:layout_marginLeft="14dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/iv_chose_contacts_single_row_dp"
            android:textStyle="bold"
            android:text="Name" />

        <TextView
            android:id="@+id/tv_chose_contacts_single_row_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignLeft="@+id/tv_chose_contacts_single_row_name"
            android:layout_below="@+id/tv_chose_contacts_single_row_name"
            android:text="Number" />



    </RelativeLayout>
</LinearLayout>
