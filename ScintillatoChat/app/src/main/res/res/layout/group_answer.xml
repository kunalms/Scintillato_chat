<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.scintillato.scintillatochat.Group_Answer">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/tv_group_answer_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/et_group_answer_answer"
        android:hint="Type Answer ..." />

    <TextView
        android:text="Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_group_answer_question"
        android:layout_below="@id/tv_group_answer_user"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_group_answer_post"
        android:textColor="@color/white"
        android:background="@drawable/button_background"/>

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_group_answer_user"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/tv_group_answer_question" />
</RelativeLayout>
