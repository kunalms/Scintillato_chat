<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/answer_community_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.scintillato.scintillatochat.Answer_Community_Question">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Answer.."
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/et_answer_community_question_answer"
        android:layout_below="@+id/iv_answer_community_question_dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="31dp"

        android:id="@+id/tv_answer_community_question_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_answer_community_question_dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/iv_answer_community_question_dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="POST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_answer_community_question_post"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/button_background"/>
</RelativeLayout>
