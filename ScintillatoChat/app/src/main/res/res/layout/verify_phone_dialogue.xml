<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_verify_phone_dialogue_number"
        android:layout_below="@+id/tv_verify_phone_dialogue_number"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_marginRight="20dp"
        android:text="Is this OK, or would you like to edit the number?" />

    <TextView
        android:id="@+id/tv_verify_phone_dialogue_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="10dp"
        
        android:text="EDIT" />

    <TextView
        android:id="@+id/tv_verify_phone_dialogue_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_verify_phone_dialogue_edit"
        android:layout_alignBottom="@+id/tv_verify_phone_dialogue_edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="OK" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_verify_phone_dialogue_number"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_marginRight="20dp"
        android:text="We will be verifying the phone number:" />

    <TextView
        android:id="@+id/tv_verify_phone_dialogue_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="27dp"
        android:text="TextView"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />
    
</RelativeLayout>