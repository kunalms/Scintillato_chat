<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.scintillato.scintillatochat.Enter_Username">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enter_username_username"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:hint="Username"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password..."
        android:id="@+id/et_enter_username_pwd"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/et_enter_username_username"
        android:layout_alignStart="@+id/et_enter_username_username"
        android:layout_alignEnd="@+id/et_enter_username_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Confirm Password.."
        android:layout_marginTop="12dp"
        android:id="@+id/et_enter_username_repwd"
        android:layout_below="@+id/et_enter_username_pwd"
        android:layout_alignStart="@+id/et_enter_username_pwd"
        android:layout_alignEnd="@+id/et_enter_username_pwd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textStyle="bold"
        android:id="@+id/btn_enter_username_next"
        android:layout_below="@+id/et_enter_username_repwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"/>

    <CheckBox
        android:text="Show Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox_enter_username_show_pwd"
        android:layout_below="@+id/et_enter_username_repwd"
        android:layout_alignStart="@+id/et_enter_username_repwd" />

</RelativeLayout>
